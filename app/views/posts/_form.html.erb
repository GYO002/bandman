<%= form_with model: @post, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "募集メンバー" %><br />
    <%= f.text_field :title, id:"prototype_title" %>
  </div>

  <div class="field">
    <%= f.label :description, "募集内容説明" %><br />
    <%= f.text_area :description, class: :form__text, id:"prototype_catch_copy" %>
  </div>

  <div class="field">
    <%= f.label :future, "バンドの将来" %><br />
    <%= f.text_area :future, class: :form__text, id:"prototype_concept" %>
  </div>

  <div class="field">
    <%= f.label :image, "画像" %><br />
    <%= f.file_field :image, id:"prototype_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>