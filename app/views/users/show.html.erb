<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.name}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">性別</th>
            <td class="table__col2"><%= @user.gender %></td>
          </tr>
          <tr>
            <th class="table__col1">年齢</th>
            <td class="table__col2"><%= @user.age %></td>
          </tr>
          <tr>
            <th class="table__col1">楽器</th>
            <td class="table__col2"><%= @user.inst %></td>
          </tr>
          <tr>
            <th class="table__col1">経験</th>
            <td class="table__col2"><%= @user.skill %></td>
          </tr>
          <tr>
            <th class="table__col1">備考</th>
            <td class="table__col2"><%= @user.remarks %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@user.name}さんのプロトタイプ"%>
      </h2>
      <div class="user__card">
      <%= render partial: 'posts/post', collection: @post %>
      </div>
    </div>
  </div>
</div>